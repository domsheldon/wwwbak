<script src="__PUBLIC__/js/sb-admin-2.js"></script>
<script type="text/javascript" src="__LAYER__/layer.js"></script>


</body>
<script type="text/javascript">
    var add_wechat_reply = document.getElementById('add_wechat_reply');
    add_wechat_reply.setAttribute("class", "active");
    var text='';
    var img='';
    var compound='';

    function setComopund()
    {
        $('input[id="compound"]:checked').each(function(){
            var val=$(this).val();
            compound = val;
        });
//        var cObj = document.getElementById("content");
//        if($("#img").is(":checked")){
//            cObj.setAttribute("readOnly",'true');
//        }else{
//            cObj.removeAttribute("readonly");
//        }
    }

    function setText()
    {
        $('input[id="text"]:checked').each(function(){
            var val=$(this).val();
            text = val;
        });
//        var cObj = document.getElementById("content");
//        if($("#img").is(":checked")){
//            cObj.setAttribute("readOnly",'true');
//        }else{
//            cObj.removeAttribute("readonly");
//        }
    }

    function setImg()
    {
        $('input[id="img"]:checked').each(function(){
            var val=$(this).val();
            img = val;
        });
//        var cObj = document.getElementById("mediaId");
//        if($("#text").is(":checked")){
//            cObj.setAttribute("readOnly",'true');
//        }else{
//            cObj.removeAttribute("readonly");
//        }
    }

    //添加到回复
    $('#addToReply').click(function(){
        var keyword = $('#keyword').val();
        var content = document.getElementById("content").value;
        var mediaId = $('#mediaId').val();
        if(keyword.length == 0){
            layer.tips('请输入关键字', '#keyword', {
                tips: [1, '#3595CC'],
                time: 4000
            });
            return false;
        }

        $.ajax({
            type : 'post',
            url : '/Admin/WechatReply/doAddReply',
            data : {'text':text,'img':img,'compound':compound,'keyword':keyword,'content':content,'mediaId':mediaId},
            dataType : 'json',
            success : function(msg) {
                if(msg.code == 0){
                    layer.msg('添加微信回复失败', {
                        time: 2000 //2秒关闭（如果不配置，默认是3秒）
                    }, function(){
                        //do something
                    });
                }else{
                    layer.msg('添加微信回复成功', {
                        time: 2000 //2秒关闭（如果不配置，默认是3秒）
                    }, function(){
                        window.location.reload();
                    });
                }
            },
            error :function(e){
                alert("添加微信回复错误");
            }
        });

    });
</script>
</html>
