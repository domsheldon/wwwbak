<body>
<include file='Public:header'/>
<include file='Public:sidebar'/>
<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">客服回复</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        添加微信客服回复列表
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group" style="margin-left: 30px;width: 400px">
                                <label>回复类型:</label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" id="compound" value="compound" onclick="setComopund()"> compound
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" id="text" value="text" onclick="setText()"> text
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" id="img" value="img" onclick="setImg()"> img
                                </label>
                            </div>
                            <div class="form-group" style="margin-left: 30px;">
                                <label>关键词汇:</label>
                                <input id="keyword" type="text" class="text small" name='title' value=''/>
                            </div>
                            <div class="form-group" style="margin-left: 30px;">
                                <label>mediaID:</label>
                                <input id="mediaId" type="text" class="text small" name='title' value='' width="50%"/>
                            </div>
                            <div class="form-group" style="margin-left: 30px;">
                                <label>回复内容:</label>
                                <!--<input id="content" type="text" class="text small" name='title' value=''/>-->
                                <textarea id="content" rows="8" cols="100" class="m-wrap" ></textarea>
                            </div>
                            <div class="col-lg-12">
                                <button id="addToReply" class="am-btn am-btn-primary am-btn-xs" style="float: left">点击添加</button>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery Version 1.11.0 -->
<script src="__PUBLIC__/js/jquery-1.11.0.js"></script>

<!-- Bootstrap Core JavaScript -->
