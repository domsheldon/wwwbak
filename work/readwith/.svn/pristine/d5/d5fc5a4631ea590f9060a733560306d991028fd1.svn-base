<script>
  var is_join ="<?php echo $is_join ?>";
  $('#your-modal').on('close.modal.amui', function(){
    var user_id = "<?php echo $user_id;?>";
    $.ajax({
      type : 'post',
      url : '/wechat/quitplan',
      data : {'user_id':user_id},
      success : function(msg) {

      },
      error :function(e){

      }
    });
  });

  function plan_join(){
    var user_id = "<?php echo $user_id;?>";
    //加载进度条
    $.AMUI.progress.start();
    $.ajax({
      type : 'get',
      url : '/plan/join',
      data : {'uid':user_id},
      success : function(msg) {
        //进度条完成
        $.AMUI.progress.done();
        $('#your-modal').modal({
          relatedTarget: this,
          onConfirm: function(options) {
            window.location.href = '/plan/info?uid='+user_id;
          }
        });
      },
      error :function(e){
        $.AMUI.progress.done();
      }
    });
  }

  function plan_quit(){
    var user_id = "<?php echo $user_id;?>";
    //加载进度条
    $.AMUI.progress.start();
    $.ajax({
      type : 'get',
      url : '/plan/quit',
      data : {'uid':user_id},
      success : function(msg) {
        //进度条完成
        $.AMUI.progress.done();
        window.location.href = '/plan/info?uid='+user_id;
      },
      error :function(e){
        $.AMUI.progress.done();
      }
    });
  }



