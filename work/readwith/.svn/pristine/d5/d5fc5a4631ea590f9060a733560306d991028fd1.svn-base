//    var h1 = 210 * total / 750;
//    var h2 = 306 * total / 750;
//    var css1 = $("#join_num").attr("style") + "padding-left:" + h1 + "px;padding-top:" + h2 + "px;";
//    $("#join_num").attr("style",css1);

    var h3 = 75 * total / 750;
    var css2 = $(".title-div").attr("style") + "height:" + h3 + "px;";
    $(".title-div").attr("style",css2);

    if(is_join == '0'){
      $("#my-alert").modal();
    }

//    var h1 = 170 * total / 750;
//    var css1 = $(".title-span").attr("style") + "padding-left:" + h1 + "px;";
